# AWS Cognito Custom Auth Environment Variables

# AWS Configuration (for deployment only - NOT passed to Lambda functions)
AWS_REGION=your_preferred_aws_region
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# SendZen API Configuration (passed to Lambda functions)
SENDZEN_API_URL=https://api.sendzen.net/v1/messages
SENDZEN_API_KEY=your_sendzen_api_key
WHATSAPP_FROM=your_whatsapp_number
WHATSAPP_TEMPLATE_NAME=template-name
WHATSAPP_LANG_CODE=your-whatsapp-lang-code

# Optional: Custom Configuration (passed to Lambda functions)
OTP_EXPIRY_MINUTES=5
MAX_LOGIN_ATTEMPTS=3

# Development Configuration (passed to Lambda functions)
NODE_ENV=development
LOG_LEVEL=info

# Cognito User Pool Configuration
COGNITO_USER_POOL_NAME=your_custom_user_pool_name
